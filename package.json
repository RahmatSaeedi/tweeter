{
  "name": "tweeter",
  "version": "1.0.1",
  "description": "A twitter clone project, forked from Lighthouse Labs, built to learn front-end development skills",
  "main": "server/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server/index.js",
    "local": "./node_modules/.bin/nodemon --watch server -e js server/index.js"
  },
  "author": "Rahmat Saeedi",
  "contributors": [
    "Lighthouse Labs"
  ],
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.15.2",
    "chance": "^1.0.2",
    "express": "^4.13.4",
    "md5": "^2.1.0"
  },
  "devDependencies": {
    "nodemon": "^1.9.2"
  },
  "eslintConfig" : {
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true,
      "mocha": true,
      "browser": true,
      "jquery": true
    },
    "extends": "eslint:recommended",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2019
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "windows"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-var": "error",
      "no-console": "off",
      "no-unused-vars": "warn",
      "func-call-spacing": [
        "error",
        "never"
      ],
      "space-before-blocks": "error",
      "keyword-spacing": "error",
      "no-trailing-spaces": ["error", { "skipBlankLines": true }],
      "semi-spacing": "error",
      "func-style": ["error", "expression"],
      "space-infix-ops": "error",
      "space-in-parens": "error",
      "camelcase": "error",
      "eqeqeq": "error",
      "brace-style": "error",
      "space-before-function-paren": [ "warn", { "anonymous": "never", "named": "never", "asyncArrow": "never" } ],
      "func-names": ["error", "never"],
      "quotes": "off"
    }
  },
  "eslintIgnore": ["public/vendor/*", "node_modules/"],
  "jshint" : {
    "esversion": 2019,
    "node" : true
  }

}
